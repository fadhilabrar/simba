<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lomba.views.ActivityCreateLomba">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="25dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnAddImg"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_baseline_add_photo_alternate_24"
                android:layout_gravity="center"
                android:layout_marginVertical="35dp"
                android:background="@drawable/bg_btn_img"
                android:scaleType="fitXY"
                android:tint="#4A4343" />

            <EditText
                android:id="@+id/etNama"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Nama Lomba"/>

            <EditText
                android:id="@+id/etKategori"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                android:editable="false"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:hint="Kategori Lomba"/>

            <EditText
                android:id="@+id/etPenyelenggara"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Penyelenggara"/>

            <EditText
                android:id="@+id/etTema"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Tema"/>

            <EditText
                android:id="@+id/etLokasi"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Lokasi"/>

            <EditText
                android:id="@+id/etTanggal"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Tanggal"
                android:editable="false"
                android:clickable="true"
                android:focusableInTouchMode="false"
                android:drawableRight="@drawable/ic_baseline_date_range_24"/>

            <EditText
                android:id="@+id/etHadiah"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Hadiah"/>

            <EditText
                android:id="@+id/etDeskripsi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/bg_edittext"
                android:hint="Deskripsi"/>

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="50dp"
                android:text="Submit"
                android:textColor="#FFF"
                android:background="@drawable/btn_login_register"/>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tbCreateLomba"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#130250"
            app:titleTextAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:titleTextColor="#FFF" />

    </com.google.android.material.appbar.AppBarLayout>

    <include
        layout="@layout/item_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>